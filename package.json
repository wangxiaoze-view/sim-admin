{
  "name": "sim-admin",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "rsbuild dev --open --env-mode development",
    "build": "rsbuild build --env-mode production",
    "build:profile": "RSDOCTOR=true RSPACK_PROFILE=ALL  rsbuild build --env-mode production",
    "build:analyze": "BUNDLE_ANALYZE=true rsbuild build --env-mode production",
    "preview": "rsbuild preview",
    "preinstall": "node ./scripts/preinstall.js",
    "commitlint": "commitlint --config commitlint.config.cjs -e -V",
    "lint:fix": "eslint {src,mock,library}/**/*.{vue,js,ts} --fix",
    "lint:format": "prettier  {src,mock,library}/**/*.{html,vue,css,sass,scss,js,ts,md} --write ",
    "lint:style": "stylelint {src,mock,library}/**/*.{vue,css,sass,scss} --cache --fix",
    "version": "conventional-changelog -p custom-config -i CHANGELOG.md -s -r 0 -n ./scripts/changelog-option.mjs && git add CHANGELOG.md",
    "postversion": "git push --tags",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 -n ./scripts/changelog-option.mjs && git add CHANGELOG.md",
    "prepare": "husky install",
    "commit": "git-cz",
    "commitizen:init": "commitizen init cz-conventional-changelog --pnpm --save-dev --save-exact"
  },
  "dependencies": {
    "@log-reporting/core": "^1.0.5",
    "@vueuse/core": "^11.1.0",
    "element-plus": "^2.8.4",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^2.2.4",
    "remote-components": "file:./remote-components-lib-main",
    "vue": "^3.5.3",
    "vue-router": "^4.4.5",
    "vxe-pc-ui": "^4.2.19",
    "vxe-table": "^4.6.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.10.0",
    "@log-reporting/types": "^1.0.1",
    "@rsbuild/core": "^1.0.1",
    "@rsbuild/plugin-css-minimizer": "^1.0.2",
    "@rsbuild/plugin-image-compress": "^1.0.2",
    "@rsbuild/plugin-sass": "^1.0.2",
    "@rsbuild/plugin-vue": "^1.0.1",
    "@rsdoctor/cli": "^0.4.6",
    "@rsdoctor/rspack-plugin": "^0.4.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.7.5",
    "@types/nprogress": "^0.2.3",
    "@vue/eslint-config-typescript": "^14.0.1",
    "commitizen": "^4.3.1",
    "compare-func": "^2.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.29.0",
    "git-cz": "^4.9.0",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "postcss-html": "^1.7.0",
    "postcss-preset-env": "^10.0.7",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "stylelint": "^16.9.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "typescript": "5.5.2",
    "typescript-eslint": "^8.5.0",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "vue-eslint-parser": "^9.4.3"
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": [
      "npm run lint:format",
      "npm run lint:fix",
      "git add"
    ]
  },
  "web-types": "./web-types.json",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
