{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "/@/*": [
        "./src/*"
      ],
      "/@mock/*": [
        "./mock/*"
      ],
      "/@sim/*": [
        "./library/*"
      ]
    }
  },
  "include": [
    "mock/**/*.ts",
    "library/**/*.ts",
    "library/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}